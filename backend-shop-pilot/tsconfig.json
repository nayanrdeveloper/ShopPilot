{
    "compilerOptions": {
        "target": "es2020",
        "module": "node16",
        "lib": [
            "es2020"
        ],
        "outDir": "./dist",
        "moduleResolution": "node16",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}